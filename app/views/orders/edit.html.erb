<div class="container">
  <%= render 'shared/error_messages', resource: current_order %>

  <%= form_for current_order do |f| %>
    <div class="form-group text-center p-4">
      <%= f.label :email, class: "" %>
      <%= f.email_field :email, class: "form-control w-50 ms-auto me-auto", value: current_user&.email %>
    </div>

    <div class="form-group text-center mt-3">
      <%= f.label :full_name, class: "" %>
      <%= f.text_area :full_name, class: "form-control ms-auto me-auto w-50", value: current_user&.name %>
    </div>

    <div class="form-group text-center mt-3">
      <%= f.label :address, class: "" %>
      <%= f.text_field :address, class: "form-control w-50 ms-auto me-auto" %>
    </div>

    <div class="form-group text-center mt-3">
      <%= f.label :phone, class: "" %>
      <%= f.phone_field :phone, class: "form-control w-50 ms-auto me-auto", multiple: true %>
    </div>

    <div class="text-center">
      <%= f.submit 'Save', { class: "mt-3" } %>
    </div>
  <% end %>
</div>